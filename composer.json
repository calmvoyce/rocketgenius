{
  "name": "rocketgenius/dev-environment",
  "description": "Rocket Genius Development Environment",
  "type": "project",
  "license": "GPLv2",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "platform": {
      "php": "7.4.7"
    },
    "sort-packages": true,
    "preferred-install": {
      "*": "dist"
    },
    "allow-plugins": {
      "johnpbloch/wordpress-core-installer": true,
      "composer/installers": true
    }
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    }
  ],
  "require": {

    "php": "^7.4",
    "composer/installers": "@stable",
    "johnpbloch/wordpress-core": "@stable",
    "johnpbloch/wordpress-core-installer": "@stable",

    "wpackagist-plugin/show-hooks":"@stable",
    "wpackagist-plugin/theme-switcha":"@stable",

    "wpackagist-theme/astra":"@stable",
    "wpackagist-theme/hello-elementor":"@stable",
    "wpackagist-theme/kadence":"@stable"

  },
  "extra": {
    "wordpress-install-dir": ".wp/latest",
    "installer-paths": {
      "plugins/{$name}":[ "type:wordpress-plugin" ],
      "themes/{$name}":[ "type:wordpress-themes" ]
    }
  }
}
